<config>
    <modules>
        <Ccc_Salesman>    
            <version>0.1.1</version>
        </Ccc_Salesman>
    </modules>
    <frontend>
        <layout>
            <updates>
                <salesman module="Ccc_Salesman">
                    <file>salesman.xml</file>
                </salesman>
            </updates>
        </layout>
    </frontend>
    <global>
        <models>
            
            <salesman>
                <class>Ccc_Salesman_Model</class>
                <resourceModel>salesman_resource</resourceModel>
            </salesman>
            <!-- <salesman_address>
                <class>Ccc_Salesman_Model_salesman</class>
                <resourceModel>salesman_address_resource</resourceModel>
            </salesman_address> -->
            <salesman_resource>
                <class>Ccc_Salesman_Model_Resource</class>
                <deprecatedNode>salesman_mysql4</deprecatedNode>
                <entities>
                    <salesman>
                        <table>salesman</table>
                    </salesman>
                    <salesman_address>
                        <table>salesman_address</table>
                    </salesman_address>
                    <salesman_price>
                        <table>salesman_price</table>
                    </salesman_price>
                </entities>
            </salesman_resource>
        </models>
        <resources>
            <salesman_setup>
                <setup>
                    <module>Ccc_Salesman</module>
                    <class>Mage_Core_Model_Resource_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </salesman_setup>
            <salesman_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </salesman_write>
            <salesman_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </salesman_read>
        </resources>
        <blocks>
            <salesman>
                <class>Ccc_Salesman_Block</class>
            </salesman>
        </blocks>
        <helpers>
           <salesman>
                  <class>Ccc_Salesman_Helper</class>
            </salesman>
        </helpers>
    </global>
    <admin>
        <!-- <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Ccc_Salesman>Ccc_Salesman_Adminhtml</Ccc_Salesman>
                    </modules>
                </args>
            </adminhtml>
        </routers> -->
        <routers>
            <salesman>
                <use>admin</use>
                <args>
                    <module>Ccc_Salesman</module>
                    <frontName>salesman</frontName>
                </args>
            </salesman>
        </routers>
         <layout>
            <updates>
                <salesman>
                    <file>salesman.xml</file>
                </salesman>
            </updates>
        </layout>
    </admin>
</config>
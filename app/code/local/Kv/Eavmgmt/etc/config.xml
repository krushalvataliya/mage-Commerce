<config>
    <modules>
        <Kv_Eavmgmt>    
            <version>0.1.1</version>
        </Kv_Eavmgmt>
    </modules>
    <frontend>
        <layout>
            <updates>
                <eavmgmt module="Kv_eavmgmt">
                    <file>eavmgmt.xml</file>
                </eavmgmt>
            </updates>
        </layout>
    </frontend>
    <global>
        <models>
            <eavmgmt>
                <class>Kv_Eavmgmt_Model</class>
                <resourceModel>eavmgmt_resource</resourceModel>
            </eavmgmt>
            <eavmgmt_resource>
                <class>Kv_Eavmgmt_Model_Resource</class>
                <deprecatedNode>eavmgmt_mysql4</deprecatedNode>
                <entities>
                    <eavmgmt>
                        <table>eavmgmt</table>
                    </eavmgmt>
                </entities>
            </eavmgmt_resource>
        </models>
        <resources>
            <eavmgmt_setup>
                <setup>
                    <module>Kv_Eavmgmt</module>
                    <class>Mage_Core_Model_Resource_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </eavmgmt_setup>
            <eavmgmt_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </eavmgmt_write>
            <eavmgmt_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </eavmgmt_read>
        </resources>
        <blocks>
            <eavmgmt>
                <class>Kv_Eavmgmt_Block</class>
            </eavmgmt> 
        </blocks>
        <helpers>
           <eavmgmt>
                  <class>Kv_Eavmgmt_Helper</class>
            </eavmgmt>
        </helpers>
    </global>
    <admin>
        <routers>
            <eavmgmt>
                <use>admin</use>
                <args>
                    <module>Kv_Eavmgmt</module>
                    <frontName>eavmgmt</frontName>
                </args>
            </eavmgmt>
        </routers>
         <layout>
            <updates>
                <eavmgmt>
                    <file>eavmgmt.xml</file>
                </eavmgmt>
            </updates>
        </layout>
    </admin>
</config>